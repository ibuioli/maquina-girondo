<?xml version='1.0' encoding='utf-8'?>
<widget id="ar.com.ibuioli.maquinagirondo" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Máquina Girondo</name>
    <description>
        Máquina Girondo, app de escritura artificial que escribe textos con el partido estilístico del poeta argentino Oliverio Girondo.
    </description>
    <author email="ibuioli@gmail.com" href="http://ibuioli.com.ar">
        Ignacio Buioli
    </author>
    <preference name="Orientation" value="portrait" />
    <preference name="SplashScreen" value="screen" />
    <preference name="FadeSplashScreenDuration" value="100" />
    <preference name="xwalkMultipleApk" value="false" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^6.4.0" />
    <engine name="browser" spec="^5.0.1" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-geolocation" spec="^2.4.3" />
    <plugin name="cordova-plugin-splashscreen" spec="^4.1.0" />
    <plugin name="cordova-plugin-crosswalk-webview" spec="^2.4.0">
        <variable name="XWALK_MODE" value="lite" />
    </plugin>
</widget>
